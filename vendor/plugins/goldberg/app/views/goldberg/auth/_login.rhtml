<% if Goldberg.user -%>
<h3> User:&nbsp;<%= h(Goldberg.user.name) %></h3>
<ul>
  <li>profile</li>
  <li><% form_tag({:controller => 'goldberg/auth', :action => 'logout'}, {:id => :logout}) do -%>
    <%= submit_tag "Logout" %>
  <% end -%></li>
</ul>

<% else -%>
<ul>
  <li><%= link_to "Login", :controller => 'goldberg/auth', :action => 'login' %></li>
<% if Goldberg.settings.self_reg_enabled -%>
  <li><%= link_to "Register", :controller => 'goldberg/users', :action => 'self_register' %></li>
<% end -%>
</ul>
<% end -%>
