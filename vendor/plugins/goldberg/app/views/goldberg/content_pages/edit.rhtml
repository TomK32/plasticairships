<h1>Editing Content Page</h1>

<% form_for :content_page, :url => {:action => 'update', 
                                    :id => @content_page.id} do |form| %>
  <%= render :partial => 'form', :locals => {:form => form} %>
  <%= submit_tag 'Edit' %>
<% end %>

<%= link_to 'Show', :action => 'show', :id => @content_page %> |
<%= link_to 'Back', :action => 'list' %>
