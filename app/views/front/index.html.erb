
<h2>featured sites</h2>
<div id="sites" class="tiny">
<% @sites.each do |site| %>
  <%= link_to image_tag(site.screenshot.public_filename(:tiny), :alt => site.title), site_url(site), :title => [site.title, site.description].join(" - ") %>
<% end %>
  <%= link_to 'more', sites_url %>
</div>

<div id="posts">
  <h2>latest blogposts</h2>
  <% for post in @posts %>
  <div class="post" id="post-<%= post.id %>">
    <h3><%= link_to h(post.title), post %> <span class="date">(<%= post.published_at.to_s(:short) %>)</span></h3>
    <%= textilize post.excerpt %>
  </div>
  <% end %>
</div>
<div id="comments">
  <h2>latest comments</h2>
  <% for comment in @site_comments %>
  <div class="comment" id="<%= comment.id %>">
    <h4><%= link_to h(comment.user_name), comment.user_website %> on <%= link_to(h(comment.site.title), site_path(comment.site) + '#comment-%i' % comment.id) %></h4>
    <%= textilize comment.body %>
  </div>
  <% end %>
  <% for comment in @post_comments %>
  <div class="comment" id="<%= comment.id %>">
    <h4><%= link_to h(comment.user_name), comment.user_website %> on <%= link_to(h(comment.post.title), post_path(comment.post) + '#comment-%i' % comment.id) %></h4>
    <%= textilize comment.body %>
  </div>
  <% end %>
</div>