<% @page_title = 'Add a new site' %>

<%= error_messages_for :site %>

<% form_for(:site, @site, :url => sites_url, :html => { :multipart => true }) do |f| %>
  <%= render :partial => 'form' , :locals => {:f => f} %>
  <p class="notice">
    If you are already registered you may want to <%= link_to 'login', login_url %> first. Otherwise <em>we will create you a login</em> on the fly and you can fill in your details in a second step. 
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', sites_path %>
