<h1>Editing post</h1>

<%= error_messages_for :post %>

<% form_for(:post, @post, :url => posts_url(@post), :html => {:method => :put}) do |f| %>
  <%= render :partial => "form", :locals => {:f => f} %>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @post %> |
<%= link_to 'Back', posts_path %>
